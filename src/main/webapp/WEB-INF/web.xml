<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>LoginPage.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.revature.servlets.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/SubmitLogin</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Hello</servlet-name>
        <servlet-class>com.revature.servlets.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Hello</servlet-name>
        <url-pattern>/hello-servlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>EmployeeHome</servlet-name>
        <jsp-file>/EmployeeHome.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeHome</servlet-name>
        <url-pattern>/EmployeeHome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManagerHome</servlet-name>
        <jsp-file>/ManagerHome.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerHome</servlet-name>
        <url-pattern>/ManagerHome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewEmployees</servlet-name>
        <servlet-class>com.revature.servlets.ViewEmployees</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewEmployees</servlet-name>
        <url-pattern>/ViewEmployees</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ViewReimbursements</servlet-name>
        <servlet-class>com.revature.servlets.ViewReimbursements</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewReimbursements</servlet-name>
        <url-pattern>/ViewReimbursements</url-pattern>
    </servlet-mapping>

    
    
</web-app>